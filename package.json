{
  "name": "qiankui-ssh",
  "version": "1.0.0",
  "description": "千葵SSH - 轻量、快速、优雅的 Web SSH 终端 (Node.js 版)",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"后端,前端\" -c \"blue,green\" \"tsx watch src/server.ts\" \"npm run dev --prefix frontend\"",
    "dev:backend": "tsx watch src/server.ts",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "tsc && npm run build --prefix frontend",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "docker build -t qiankui-ssh .",
    "docker:run": "docker run -d -p 8888:8888 qiankui-ssh"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.3.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "ssh2": "^1.15.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/ssh2": "^1.11.19",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "fast-check": "^3.14.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  }
}
